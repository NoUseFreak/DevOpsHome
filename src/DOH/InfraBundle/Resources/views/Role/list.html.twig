{% extends 'DOHInfraBundle:Default:index.html.twig' %}

{% block title %}{{ parent() }} - Farm - List{% endblock %}

{% block content %}
    <div class="doh-block">
        <h2 class="doh-block-title">Farms</h2>
        <div class="doh-action">
            <ul class="list-inline">
                <li><a href="{{ path('doh_infra_role_new') }}">New</a></li>
            </ul>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>name</th>
                </tr>
            </thead>
            <tbody>
                {% for role in roles %}
                    <tr>
                        <td>{{ role.id }}</td>
                        <td><a href="{{ path('doh_infra_role_detail', {id: role.id}) }}">{{ role.name }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
