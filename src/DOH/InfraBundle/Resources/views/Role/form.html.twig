{% extends '::form.html.twig' %}

{% block title %}{{ parent() }} - Role - New{% endblock %}

{% block header %}
    {% embed ":Component:box_header.html.twig" %}
        {% block title %}New role{% endblock %}
        {% block title_icon %}<i class="fa fa-paperclip"></i>{% endblock %}
        {% block actions %}
            <button class="btn default btn-sm" type="reset">
                <i class="fa fa-reply"></i> Reset
            </button>
            <button class="btn btn-success btn-sm" type="submit">
                <i class="fa fa-check"></i> Save
            </button>
            <button class="btn btn-success btn-sm" type="submit">
                <i class="fa fa-check-circle"></i> Save &amp; Continue Edit
            </button>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block form_tabs %}
    <li class="active"><a href="#general" role="tab" data-toggle="tab">General</a></li>
{% endblock %}

{% block form_content %}
    <div class="tab-pane active" id="general">
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.name) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.description) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.description) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
{% endblock %}
