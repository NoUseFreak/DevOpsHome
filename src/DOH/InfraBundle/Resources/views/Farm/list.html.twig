{% extends '::list.html.twig' %}

{% block title %}Infra - Farm{% endblock %}

{% block header %}
    {% embed ":Component:box_header.html.twig" %}
        {% block title %}Farms{% endblock %}
        {% block title_icon %}<i class="fa fa-cloud"></i>{% endblock %}
        {% block actions %}
            <a class="btn btn-success btn-sm" href="{{ path('doh_infra_farm_new') }}"><i class="fa fa-plus"></i> New</a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block table_rows %}
    {% for farm in farms %}
        <tr>
            <td>{{ farm.id }}</td>
            <td>
                <a class="btn btn-xs btn-info" href="{{ path('doh_infra_farm_detail', {id: farm.id}) }}">
                    <i class="fa fa-search"></i> View
                </a>
            </td>
            <td>{{ farm.name }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">
                No farms created yet. <a href="{{ path('doh_infra_farm_new') }}">Create one now!</a>
            </td>
        </tr>
    {% endfor %}
{% endblock %}


