{% extends '::list.html.twig' %}

{% block title %}Infra - Server{% endblock %}

{% block header %}
    {% embed ":Component:box_header.html.twig" %}
        {% block title %}Servers{% endblock %}
        {% block title_icon %}<i class="fa fa-hdd-o"></i>{% endblock %}
        {% block actions %}
            <a class="btn btn-success btn-sm" href="{{ path('doh_infra_server_new') }}"><i class="fa fa-plus"></i> New</a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block table_rows %}
    {% for server in servers %}
        <tr>
            <td>{{ server.id }}</td>
            <td>
                <a class="btn btn-xs btn-info" href="{{ path('doh_infra_server_detail', {id: server.id}) }}">
                    <i class="fa fa-search"></i> View
                </a>
            </td>
            <td>{{ server.name }}</td>
        </tr>
    {% endfor %}
{% endblock %}
