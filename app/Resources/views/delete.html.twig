{% extends "::form.html.twig" %}

{% block title %}{{ parent() }} - {{ entity_type }} - Delete{% endblock %}

{% block header %}
    {% embed ":Component:box_header.html.twig" %}
        {% block title %}Delete {{ entity_type }}{% endblock %}
        {% block title_icon %}<i class="fa fa-hdd-o"></i>{% endblock %}
        {% block actions %}
            <a href="javascript:history.back();" class="btn btn-default btn-sm" type="reset">
                <i class="fa fa-reply"></i> Cancel
            </a>
            <button class="btn btn-danger btn-sm" type="submit">
                <i class="fa fa-trash"></i> Delete
            </button>
        {% endblock %}
    {% endembed %}
{% endblock %}



{% block form_content %}
<div class="tab-pane active" id="general">
    <div class="row">
        <div class="col-md-12">
            <h2>{{ entity_name }}</h2>
            <div class="alert alert-danger" role="alert">
                You are about to remove "{{ entity_name }}"! This action can not be undone.
            </div>
        </div>
    </div>

    <div class="form-group hidden">
        <div class="col-sm-2">
            {{ form_label(form.name) }}
        </div>
        <div class="col-sm-10">
            {{ form_widget(form.name) }}
        </div>
    </div>
    {{ form_rest(form) }}
{% endblock %}
