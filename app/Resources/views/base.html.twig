<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title_full %}DoH - {% block title %}Dashboard{% endblock %}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/app.min.css') }}"/>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />

</head>
<body>
{% block body %}
    <header role="navigation" class="page-header navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('doh_main_dashboard') }}">DoH</a>
        </div>
        <div class="navbar-collapse collapse">
            <div class="navbar-right">
                <form role="form" class="navbar-form pull-left" action="#">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
                <ul class="nav navbar-nav">
                    <li class="dropdown dropdown-user">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="{{ gravatar(app.user.email, 80) }}" class="avatar img-circle" data-toggle="tooltip" />{{ app.user.username }} <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li><a href="#">Separated link</a></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i></a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="page-container">
        {{ render(controller('DOHMainBundle:Menu:sidebar')) }}
        {#{% include "_sidebar.html.twig" %}#}
        <div class="page-content">
            {% block content_full %}
                {% block content_header %}{% endblock %}
                {% block content %}{% endblock %}
            {% endblock %}
        </div>
    </div>

    <div class="page-footer">
        <p>&copy; DevOpsHome by <a href="http://nousefreak.be">NoUseFreak</a></p>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/footer.min.js') }}"></script>
{% endblock %}
{% block keyboard_control %}
    {{ render(controller('DOHMainBundle:KeyboardControl:index')) }}
{% endblock %}
</body>
</html>
