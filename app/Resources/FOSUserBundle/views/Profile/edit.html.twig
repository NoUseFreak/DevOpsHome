{% extends '::form.html.twig' %}

{% block title %}{{ parent() }} - Farm - New{% endblock %}

{% block header %}
    {% embed ":Component:box_header.html.twig" %}
        {% block title %}Edit profile{% endblock %}
        {% block title_icon %}<i class="fa fa-user"></i>{% endblock %}
        {% block actions %}
            <a class="btn btn-sm" href="javascript:history.back();">
                <i class="fa fa-reply"></i> Cancel
            </a>
            <button class="btn default btn-sm" type="reset">
                <i class="fa fa-reply"></i> Reset
            </button>
            <button class="btn btn-success btn-sm" type="submit">
                <i class="fa fa-check"></i> Save
            </button>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block form_tabs %}
    <li class="active"><a href="#general" role="tab" data-toggle="tab">General</a></li>
    <li><a href="#info" role="tab" data-toggle="tab">Info</a></li>
    <li><a href="#social" role="tab" data-toggle="tab">Social</a></li>
    <li><a href="#bio" role="tab" data-toggle="tab">Bio</a></li>
{% endblock %}

{% block form_content %}
    <div class="tab-pane active" id="general">
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.username) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.email) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.email) }}
            </div>
        </div>
    </div>
    <div class="tab-pane" id="info">
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.firstName) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.firstName) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.lastName) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.lastName) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.location) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.location) }}
            </div>
        </div>
    </div>
    <div class="tab-pane" id="social">
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.homepage) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.homepage) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.skype) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.skype) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.twitter) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.twitter) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.github) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.github) }}
            </div>
        </div>
    </div>
    <div class="tab-pane" id="bio">
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.bio) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.bio) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
{% endblock %}
